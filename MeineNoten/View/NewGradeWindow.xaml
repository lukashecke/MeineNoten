<Window x:Class="MeineNoten.View.NewGradeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeineNoten.View"
        mc:Ignorable="d"
        Title="Neue Note" Height="267" Width="384">
    <Grid>
        <Label Content="Fach" HorizontalAlignment="Left" Height="30" Margin="20,20,0,0" VerticalAlignment="Top" Width="85"/>
        <Label Content="Art" HorizontalAlignment="Left" Height="30" Margin="20,75,0,0" VerticalAlignment="Top" Width="85"/>
        <Label Content="Datum" HorizontalAlignment="Left" Height="30" Margin="20,135,0,0" VerticalAlignment="Top" Width="85"/>
        <Label Content="Gewichtung" HorizontalAlignment="Left" Height="30" Margin="210,20,0,0" VerticalAlignment="Top" Width="85"/>
        <Label Content="Note" HorizontalAlignment="Left" Height="30" Margin="210,75,0,0" VerticalAlignment="Top" Width="85"/>
        <ComboBox DataContext="{Binding}" 
                  ItemsSource="{Binding Grades}"
                  SelectedItem="{Binding SelectedGrade}"
            HorizontalAlignment="Left" Height="25" Margin="210,110,0,0" VerticalAlignment="Top" Width="85"/>
        <DatePicker 
            SelectedDate="{Binding SelectedDate}"
            HorizontalAlignment="Left" Height="25" Margin="35,165,0,0" VerticalAlignment="Top" Width="150"/>
        <TextBox Text="{Binding Art}"
            HorizontalAlignment="Left" Height="20" Margin="20,96,0,0" 
                 TextWrapping="Wrap"   VerticalAlignment="Top" 
                 Width="105"/>
        <ComboBox DataContext="{Binding}" 
                  ItemsSource="{Binding Subjects}"
                  SelectedItem="{Binding SelectedSubject}"
                  HorizontalAlignment="Left" 
                  Height="20" 
                  Margin="20,50,0,0" 
                  VerticalAlignment="Top" 
                  Width="125"/>
        <CheckBox IsChecked="{Binding SelectedWeighting}"
            Content="Doppelt?" HorizontalAlignment="Left" Height="15" Margin="220,55,0,0" VerticalAlignment="Top" Width="75"/>
        <Button 
            Click="Button_Click" Content="Eintragen" HorizontalAlignment="Left" Height="50" Margin="235,165,0,0" VerticalAlignment="Top" Width="110"/>

    </Grid>
</Window>
