        xmlns:local="clr-namespace:MeineNoten"
        mc:Ignorable="d"
        Title="Meine Noten" Height="450" Width="800" Background="LightGray">
    <Grid>
        <ListBox HorizontalAlignment="Left" 
             Height="342" 
             Margin="41,40,0,0" 
             VerticalAlignment="Top" 
             Width="319"
             SelectionChanged="ListBox_SelectionChanged">
            <ListBoxItem>Anwendungsentwicklung und Programmierung</ListBoxItem>
            <ListBoxItem>IT-Systeme</ListBoxItem>
            <ListBoxItem>Vernetzte Systeme</ListBoxItem>
            <ListBoxItem>Betriebswirtschaftliche Prozesse</ListBoxItem>
            <ListBoxItem>Sozialkunde</ListBoxItem>
            <ListBoxItem>Deutsch</ListBoxItem>
            <ListBoxItem>Englisch</ListBoxItem>
            <ListBoxItem>Ethik</ListBoxItem>
            <ListBoxItem>Sport</ListBoxItem>
            <ListBoxItem>Crimpen und Löten</ListBoxItem>
        </ListBox>
        <ListView Name="listView"
                  HorizontalAlignment="Left" 
                  Height="155" 
                  Margin="480,40,0,0" 
                  VerticalAlignment="Top" 
                  Width="285"/>

        <!--Combobox Text wird nicht angezeigt!-->
        <Label Content="{Binding TotalGrade}" 
               HorizontalAlignment="Left" 
               Height="50" 
               Margin="560,305,0,0" 
               VerticalAlignment="Top" 
               Width="205"/>
        <Label Content="Zeugnisnote: " 
               HorizontalAlignment="Left" 
               Height="45" 
               Margin="480,305,0,0" 
               VerticalAlignment="Top" 
               Width="80"/>
        <Button Content="Neue Note" 
                HorizontalAlignment="Left" 
                Height="40" 
                Margin="570,265,0,0" 
                VerticalAlignment="Top" 
                Width="145"
                Click="Button_Click"/>

    </Grid>




